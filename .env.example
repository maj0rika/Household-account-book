# Supabase Postgres connection string
DATABASE_URL=

# Better Auth secret (Phase 3)
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Google OAuth client credentials (optional, Phase 3)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Set to "true" to show Google sign-in button on login page
NEXT_PUBLIC_GOOGLE_AUTH_ENABLED=false

# LLM Configuration (Phase 4)
# Provider: "openai" (default, GPT-4o-mini) or "kimi" (Moonshot KIMI K2)
LLM_PROVIDER=openai
# OpenAI API key (required when LLM_PROVIDER=openai)
OPENAI_API_KEY=
# KIMI API key (required when LLM_PROVIDER=kimi)
KIMI_API_KEY=
# Fireworks AI API key (fast Kimi K2.5 hosted on US servers)
FIREWORKS_API_KEY=

# Field-level encryption key (32 bytes = 64 hex chars)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# Public API base URL
NEXT_PUBLIC_API_URL=
